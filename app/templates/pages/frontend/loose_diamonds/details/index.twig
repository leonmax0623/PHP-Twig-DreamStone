<meta property="og:updated_time" content="{{ product.updated }}" />

<meta name="twitter:url" content="{{ product.permalink }}">
<meta name="twitter:title" content="{{ product.title }}, {{ product.color.code }} Color, {{ product.clarity.code }} Clarity, {{ product.cut.code }} Cut,
