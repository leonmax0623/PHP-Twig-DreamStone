{% block content %}
<script>
    // window.product = JSON.parse($('<div>').html('{{ productJson }}')[0].textContent);
    window.product = JSON.parse($('<div>').html("{{ productJson }}".replace(/\u0022/g, "'"))[0].textContent);

    $(document).ready(function () {
        $('.t-discover-more').click(function () {
            $('#discover_more_block').toggle('slow');
            $(this).toggleClass('t-open');
        });
    });
</script>
<script src="{{ app.request.getSchemeAndHttpHost() }}/js/modernizr.custom.js"></script>

{%  include "pages/frontend/loose_diamonds/details/main.twig" %}
<div id="discover_more_block" class="t-product-details-block u-bg-light-gray">
    <div class="content-md">
        <h6 class="u-f24 u-color-dark-gray u-tc">Product Details</h6>
        <div class="u-clear"></div>
        <div class="o-col-lg-5 o-col-md-6 o-col-sm-12">
            <label>Diamond Information</label>
            <table class="c-details-table">
                <tr>
                    <td>Shape</td>
                    <td>{{ product.shape.code }}</td>
                </tr>
                <tr>
                    <td>Carats</td>
                    <td>{{ product.weight }} carats</td>
                </tr>
                <tr>
                    <td>Cut</td>
                    <td>{{ product.cut.code }}</td>
                </tr>
                {% if product.color %}
                <tr>
                    <td>Color</td>
                    <td>{{ product.color.code }}</td>
                </tr>
                {% endif %}
                {% if product.clarity %}
                <tr>
                    <td>Clarity</td>
                    <td>{{ product.clarity.code }}</td>
                </tr>
                {% endif %}
                <tr>
                    <td>Stock Number</td>
                    <td>{{ product.stockNumber }}</td>
                </tr>
            </table>
            <label>Shipping Information</label>
            <table class="c-details-table">
                <tr>
                    <td>Order By</td>
                    <td>3PM EST Today</td>
                </tr>
                <tr>
                    <td>Ships By</td>
                    <td>
                        {% if user == false %}
                        {{ product.shippingDetails.shipsBy|date_modify("+9 day")|date("l, F jS") }}
                        {% else %}
                        {% if not user.city %}
                        {{ product.shippingDetails.shipsBy|date_modify("+9 day")|date("l, F jS") }}
                        {% elseif user.city == 'New York' %}
                        {{ product.shippingDetails.shipsBy|date_modify("+5 day")|date("l, F jS") }}
                        {% elseif user.country == 'US' %}
                        {{ product.shippingDetails.shipsBy|date_modify("+7 day")|date("l, F jS") }}
                        {% else %}
                        {{ product.shippingDetails.shipsBy|date_modify("+9 day")|date("l, F jS") }}
                        {% endif %}
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
        <div class="o-col-lg-5 o-col-md-6 o-col-sm-12 u-fr">
            <label>Additional Diamond Information</label>
            <table class="c-details-table">
                <tr>
                    <td>Depth %</td>
                    <td>{{ product.depth }}%</td>
                </tr>
                <tr>
                    <td>Table %</td>
                    <td>{{ product.table }}%</td>
                </tr>
                {% if product.symmetry %}
                <tr>
                    <td>Symmetry</td>
                    <td>{{ product.symmetry.code }}</td>
                </tr>
                {% endif %}
                {% if product.polish %}
                <tr>
                    <td>Polish</td>
                    <td>{{ product.polish.code }}</td>
                </tr>
                {% endif %}
                {% if product.culet %}
                <tr>
                    <td>Culet</td>
                    <td>{{ product.culet.code }}</td>
                </tr>
                {% endif %}
                {% if product.flourence %}
                <tr>
                    <td>Fluorescence</td>
                    <td>{{ product.flourence.code }}</td>
                </tr>
                {% endif %}
                {% if product.measurements %}
                <tr>
                    <td>Measurement</td>
                    <td>{{ product.measurements }}</td>
                </tr>
                {% endif %}
                {% if product.ratio %}
                <tr>
                    <td>Ratio</td>
                    <td>{{ product.ratio }}</td>
                </tr>
                {% endif %}
                {% if showCerts %}
                <tr>
                    <td>Report Number</td>
                    <td>{{ product.certificateNumber }}</td>
                </tr>
                {% endif %}
                {% if product.dna %}
                <tr>
                    <td><a href="{{ product.dna }}" target="_blank">DNA</a></td>
                    <td></td>
                </tr>
                {% endif %}
            </table>
        </div>
    </div>
    <div class="u-clear"></div>
</div>
<div class="u-clear-30"></div>
