        or '.J' in product.imageExternal %}{{ product.imageExternal }}{% else %}{{ app.request.getSchemeAndHttpHost() }}/images/loose_diamonds/nm_{{product.shape.code}}.png{% endif %}">
<meta property="og:image:secure_url"
    content="{% if product.imageExternal
    and '.j' in product.imageExternal
    or '.J' in product.imageExternal %}{{ product.imageExternal }}{% else %}{{ app.request.getSchemeAndHttpHost() }}/images/loose_diamonds/nm_{{product.shape.code}}.png{% endif %}" />
<meta property="og:title" content="{{ product.title }}, {{ product.color.code }} Color, {{ product.clarity.code }} Clarity, {{ product.cut.code }} Cut,
