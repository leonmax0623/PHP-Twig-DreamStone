<meta name="twitter:description" content="{{ product.title }}, {{ product.color.code }} Color Diamond, {{ product.clarity.code }} Clarity Diamond,
{{ product.cut.code }} Cut Diamond, {{ product.lab }} Diamond Certification #{{ product.certificateNumber }},
${{ product.price }} ID:{{ product._id }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image"
    content="{% if product.imageExternal
