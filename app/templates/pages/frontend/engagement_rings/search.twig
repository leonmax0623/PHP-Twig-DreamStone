{% extends "layouts/frontend.twig" %}

{%- block head_title -%}
    Loose Diamonds | Ideal Cut Diamonds | Certified Diamonds | Diamond Engagement Rings - DreamStone
{%- endblock -%}

{%- block meta_description -%}
    Shop diamond engagement rings, diamond stud earrings, diamond pendants, GIA diamonds online at dreamstone.com. DreamStone's comprehensive interactive education center will guide you through everything you need to know about diamonds.
{%- endblock -%}

{%- block meta_keywords -%}
    Loose Diamonds, Ideal Cut Diamonds, Certified Diamonds, Princess Cut Diamond, Round Diamond, Diamond Engagement Rings, Diamond Stud Earrings, Solitaire Diamond Pendant, diamond education, designer engagement rings, unique engagement rings.
{%- endblock -%}

{% block content %}

    {% if subcategories %}
    <div class="t-jewelry-banner">
        {% include "pages/frontend/jewelry/_subcategories.twig" %}
    </div>
    <div class="u-clear"></div>
    {% endif %}

    {% include "pages/frontend/_partials/bread_crumbs.twig" %}
    <div class="u-clear"></div>

    <div class="content">
        {% include "pages/frontend/engagement_rings/filter.twig" %}
        {% include "pages/frontend/jewelry/results_filter.twig" %}
    </div>
    <script>
      window.search = window.search || function(field, value) {
        if (field !== 'jewelrytype') {
          UrlParams.set({ [field]: UrlParams.get()[field] === value ? '' : value }, false);
          loadPageData(location.href, '.t-search-results', true, function (finish, total) {
            updateLinks();
            $('#search-results-count').html(`Results (${total})`);
          });
        }
      };
    </script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/jquery.ui.touch-punch.min.js"></script>

{% endblock %}