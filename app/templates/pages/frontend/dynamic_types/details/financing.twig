                <div class="t-options-slider">
                    <label class="u-text-upper u-f16 u-color-dark-gray">{{staticpage.title}}</label>
                    <div class="u-clear-10"></div>
                    {{staticpage.description}}
                    <div class="u-clear-10"></div>
                    <a href="{{ path_for('staticpages-Page', {'filter': staticpage.url}) }}" class="c-learn-more">Learn more </a>
                </div>
            {% endfor %}
            </div>
        </div>
        <div class="u-clear"></div>
    </div>
</div>
